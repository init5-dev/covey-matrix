generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())
  description String
  deadline Int
  financial_importance Int
  spiritual_importance Int
  social_emotional_importance Int
  physical_importance Int
  status String
}
